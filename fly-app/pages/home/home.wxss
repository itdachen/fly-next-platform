}

/* 列表 */
.list{
  width: 750rpx;
  column-count: 2;
  box-sizing: border-box;
	padding: 25rpx;
}
.list-item{
  
  /* 不要折断 */
  break-inside: avoid;
  background-color: #fff;
  border-radius: 15rpx;
  padding-top: 50rpx;
  margin-bottom: 25rpx;
  overflow:hidden;
}
.list-img{
  width: 100%;
  
}
.list-a{
  font-size: 11pt;
  margin: 20rpx 0;
  margin-left: 25rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.list-bottom{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-end;
}
.list-b{
  color:#ff5934;
  font-size: 13pt;
  font-weight: 700;
  text-align: end;
}
.list-c{
  font-size: 8pt;
  color:#ff5934;
  margin-left: 5rpx;
}
.list-d{
  padding: 0 2rpx;
  font-size: 9pt;
  color:#ff5934;
  border: 1rpx solid #ff5934;
  border-radius: 5rpx;
  margin-left: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}