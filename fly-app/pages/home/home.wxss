}

.three-item:nth-child(2) {
  border-left: 5rpx solid #f5e4e2;
  border-right: 5rpx solid #f5e4e2;
}

/* 导航 */
.nav {
 
  width: 700rpx;
  height: 320rpx;
  padding: 0 25rpx;
}

.nav-box {
  width: 700rpx;
  height: 320rpx;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-wrap: wrap;
}

.nav-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav-img {
  width: 100rpx;
}

.nav-text {
  font-size: 9pt;
  text-align: center;
}

