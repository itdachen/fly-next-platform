/* 页面背景颜色 */
page {
  
  background-color: #eeeeee;
}

/* 导航栏 */
.window {
  width: 750rpx;
  height: 170rpx;
  background-color: #ff6600;
  position: fixed;
  top: 0;
  z-index: 999;
}

.window-widch {
  width: 600rpx;
  height: 136rpx;
  padding-top: 30rpx;
  display: flex;
  align-items: flex-end;

}

/* 小米logo */
.window-image {
  background-color: #fff;
  border-radius: 40%;
  width: 70rpx;
  height: 70rpx;
  margin: 0 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.window-logo {
  width: 50rpx;
  height: 50rpx;
}

/* 搜索 */
.window-input {
  width: 400rpx;
  height: 70rpx;
  background-color: #ffffff;
  /* margin: 0 auto; */
  border-radius: 35rpx;

  font-size: 10pt;
  color: #cccccc;
}

.p-s {
  width: 750rpx;
  position: relative;
}

/* 圆角背景图 */
.page {
  width: 750rpx;
  height: 400rpx;
  background-color: #ff6600;
  border-radius: 0 0 60% 60%/0 0 10% 10%;
  position: absolute;
  top: 0;
}

/* 轮播 */
.swiper {
  width: 725rpx;
  height: 265rpx;
background-color: #fff;
  padding: 190rpx 0rpx 0 25rpx;
}

swiper-one {
  width: 700rpx;
}

.swiper-img {
  width: 700rpx;
  height: 260rpx;
  border-radius: 15rpx;
  background-color: #cccccc;
}
/* 修改dot形状 */
.wx-swiper-dots .wx-swiper-dot{
  width: 40rpx;    /*宽*/
  height: 10rpx;   /*高*/
  border-radius: 0rpx;  /*圆角*/
}
/* 修改dot之间的间距 */
.wx-swiper-dots .wx-swiper-dot:nth-of-type(n+2) {
  margin-left: -16rpx;
}
/* 调成dots的位置 */

/* 中间 */
.wx-swiper-dots.wx-swiper-dots-horizontal {
  top:75%;
}





/* 三栏 */
.three {

 width: 750rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;

}

.three-item {
  text-align: center;
  width: 250rpx;
  color: #f83c1b;
  font-size: 9pt;
