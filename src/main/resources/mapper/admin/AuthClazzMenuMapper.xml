<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.itdachen.admin.mapper.IAuthClazzMenuMapper">


    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.github.itdachen.admin.sdk.vo.AuthClazzMenuVO" id="authClazzMenuMap">
        <result property="id" column="id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="appId" column="app_id"/>
        <result property="clazzCode" column="clazz_code"/>
        <result property="clazzTitle" column="clazz_title"/>
        <result property="funcId" column="func_id"/>
        <result property="funcTitle" column="func_title"/>
    </resultMap>

    <!-- VO 类查询 -->
    <sql id="selectAuthClazzMenuVO">
        SELECT id, tenant_id, app_id, clazz_code, clazz_title, func_id, func_title
        FROM ta_fly_auth_clazz_menu
    </sql>

    <!-- 分页和导出查询参数 -->
    <sql id="selectParamsWhere">
        <where>
            <if test="null != tenantId  and '' != tenantId ">
                AND tenant_id = #{tenantId}
            </if>
            <if test="null != appId  and '' != appId ">
                AND app_id = #{appId}
            </if>
            <if test="null != clazzCode  and '' != clazzCode ">
                AND clazz_code = #{clazzCode}
            </if>
            <if test="null != clazzTitle  and '' != clazzTitle ">
                AND clazz_title LIKE CONCAT(CONCAT('%',#{clazzTitle}),'%')
            </if>
            <if test="null != funcId  and '' != funcId ">
                AND func_id = #{funcId}
            </if>
            <if test="null != funcTitle  and '' != funcTitle ">
                AND func_title LIKE CONCAT(CONCAT('%',#{funcTitle}),'%')
            </if>
        </where>
    </sql>

    <select id="list_COUNT" parameterType="com.github.itdachen.admin.sdk.query.AuthClazzMenuQuery"
            resultType="java.lang.Long">
        SELECT COUNT(id)
        FROM ta_fly_auth_clazz_menu
        <include refid="selectParamsWhere"></include>
    </select>

    <!-- 集合查询 -->
    <select id="list" parameterType="com.github.itdachen.admin.sdk.query.AuthClazzMenuQuery"
            resultMap="authClazzMenuMap">
        <include refid="selectAuthClazzMenuVO"/>
        <include refid="selectParamsWhere"></include>
        ORDER BY id DESC
    </select>

    <!-- 根据主键查询 -->
    <select id="selectAuthClazzMenuVO" parameterType="java.lang.String" resultMap="authClazzMenuMap">
        <include refid="selectAuthClazzMenuVO"/>
        WHERE id = #{id}
    </select>

    <!-- 批量添加 -->
    <insert id="batchSave" parameterType="java.util.List">
        INSERT INTO ta_fly_auth_clazz_menu (id ,
        tenant_id ,
        app_id ,
        clazz_code ,
        clazz_title ,
        func_id ,
        func_title ,
        create_time ,
        create_user ,
        create_user_id ,
        update_time ,
        update_user ,
        update_user_id
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.tenantId},
            #{item.appId},
            #{item.clazzCode},
            #{item.clazzTitle},
            #{item.funcId},
            #{item.funcTitle},
            #{item.createTime},
            #{item.createUser},
            #{item.createUserId},
            #{item.updateTime},
            #{item.updateUser},
            #{item.updateUserId})
        </foreach>
    </insert>

    <!-- 批量更新 -->
    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=";">
            UPDATE ta_fly_auth_clazz_menu
            <set>
                <if test="null != item.id  and '' != item.id ">id =
                    #{item.id},
                </if>
                <if test="null != item.tenantId  and '' != item.tenantId ">tenant_id =
                    #{item.tenantId},
                </if>
                <if test="null != item.appId  and '' != item.appId ">app_id =
                    #{item.appId},
                </if>
                <if test="null != item.clazzCode  and '' != item.clazzCode ">clazz_code =
                    #{item.clazzCode},
                </if>
                <if test="null != item.clazzTitle  and '' != item.clazzTitle ">clazz_title =
                    #{item.clazzTitle},
                </if>
                <if test="null != item.funcId  and '' != item.funcId ">func_id =
                    #{item.funcId},
                </if>
                <if test="null != item.funcTitle  and '' != item.funcTitle ">func_title =
                    #{item.funcTitle},
                </if>
                <if test="null != item.createTime ">create_time =
                    #{item.createTime},
                </if>
                <if test="null != item.createUser  and '' != item.createUser ">create_user =
                    #{item.createUser},
                </if>
                <if test="null != item.createUserId  and '' != item.createUserId ">create_user_id =
                    #{item.createUserId},
                </if>
                <if test="null != item.updateTime ">update_time =
                    #{item.updateTime},
                </if>
                <if test="null != item.updateUser  and '' != item.updateUser ">update_user =
                    #{item.updateUser},
                </if>
                <if test="null != item.updateUserId  and '' != item.updateUserId ">update_user_id =
                    #{item.updateUserId},
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>

    <select id="findCheckedMenu" parameterType="java.lang.String" resultType="java.lang.String">
        SELECT func_id
        FROM ta_fly_auth_clazz_menu
        WHERE tenant_id = #{tenantId}
          AND clazz_code = #{clazzCode}
    </select>


    <select id="removeCheckedMenu" parameterType="java.lang.String" resultType="java.lang.String">
        DELETE
        FROM ta_fly_auth_clazz_menu
        WHERE tenant_id = #{tenantId}
          AND clazz_code = #{clazzCode}
    </select>


</mapper>