<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.itdachen.admin.mapper.IDeptFuncMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.github.itdachen.admin.sdk.vo.DeptFuncVO" id="deptFuncMap">
        <result property="id" column="id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="funcCode" column="func_code"/>
        <result property="title" column="title"/>
        <result property="titleAs" column="title_as"/>
        <result property="validFlag" column="valid_flag"/>
        <result property="remarks" column="remarks"/>
    </resultMap>

    <!-- VO 类查询 -->
    <sql id="selectDeptFuncVO">
        SELECT id, tenant_id, func_code, title, title_as, valid_flag, remarks
        FROM ta_fly_dept_func
    </sql>

    <!-- 分页和导出查询参数 -->
    <sql id="selectParamsWhere">
        <where>
            <if test="null != tenantId  and '' != tenantId ">
                AND tenant_id = #{tenantId}
            </if>
            <if test="null != funcCode  and '' != funcCode ">
                AND func_code = #{funcCode}
            </if>
            <if test="null != title  and '' != title ">
                AND title LIKE CONCAT(CONCAT('%',#{title}),'%')
            </if>
            <if test="null != validFlag  and '' != validFlag ">
                AND valid_flag = #{validFlag}
            </if>
            <if test="null != removeFlag  and '' != removeFlag ">
                AND remove_flag = #{removeFlag}
            </if>
        </where>
    </sql>

    <select id="list_COUNT" parameterType="com.github.itdachen.admin.sdk.query.DeptFuncQuery"
            resultType="java.lang.Long">
        SELECT COUNT(id)
        FROM ta_fly_dept_func
        <include refid="selectParamsWhere"></include>
    </select>

    <!-- 集合查询 -->
    <select id="list" parameterType="com.github.itdachen.admin.sdk.query.DeptFuncQuery" resultMap="deptFuncMap">
        <include refid="selectDeptFuncVO"/>
        <include refid="selectParamsWhere"></include>
        ORDER BY id DESC
    </select>

    <!-- 根据主键查询 -->
    <select id="selectDeptFuncVO" parameterType="java.lang.String" resultMap="deptFuncMap">
        <include refid="selectDeptFuncVO"/>
        WHERE id = #{id}
    </select>
    
    <select id="findDeptFuncByTitle"  parameterType="java.lang.String" resultMap="deptFuncMap">
        <include refid="selectDeptFuncVO"/>
        WHERE tenant_id = #{tenantId} AND title = #{title}
    </select>

    <!-- 批量添加 -->
    <insert id="batchSave" parameterType="java.util.List">
        INSERT INTO ta_fly_dept_func (id ,
        tenant_id ,
        func_code ,
        title ,
        title_as ,
        valid_flag ,
        remarks ,
        remove_flag ,
        create_time ,
        create_user ,
        create_user_id ,
        update_time ,
        update_user ,
        update_user_id
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.tenantId},
            #{item.funcCode},
            #{item.title},
            #{item.titleAs},
            #{item.validFlag},
            #{item.remarks},
            #{item.removeFlag},
            #{item.createTime},
            #{item.createUser},
            #{item.createUserId},
            #{item.updateTime},
            #{item.updateUser},
            #{item.updateUserId})
        </foreach>
    </insert>

    <!-- 批量更新 -->
    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=";">
            UPDATE ta_fly_dept_func
            <set>
                <if test="null != item.id  and '' != item.id ">id =
                    #{item.id},
                </if>
                <if test="null != item.tenantId  and '' != item.tenantId ">tenant_id =
                    #{item.tenantId},
                </if>
                <if test="null != item.funcCode  and '' != item.funcCode ">func_code =
                    #{item.funcCode},
                </if>
                <if test="null != item.title  and '' != item.title ">title =
                    #{item.title},
                </if>
                <if test="null != item.titleAs  and '' != item.titleAs ">title_as =
                    #{item.titleAs},
                </if>
                <if test="null != item.validFlag  and '' != item.validFlag ">valid_flag =
                    #{item.validFlag},
                </if>
                <if test="null != item.remarks  and '' != item.remarks ">remarks =
                    #{item.remarks},
                </if>
                <if test="null != item.removeFlag  and '' != item.removeFlag ">remove_flag =
                    #{item.removeFlag},
                </if>
                <if test="null != item.createTime ">create_time =
                    #{item.createTime},
                </if>
                <if test="null != item.createUser  and '' != item.createUser ">create_user =
                    #{item.createUser},
                </if>
                <if test="null != item.createUserId  and '' != item.createUserId ">create_user_id =
                    #{item.createUserId},
                </if>
                <if test="null != item.updateTime ">update_time =
                    #{item.updateTime},
                </if>
                <if test="null != item.updateUser  and '' != item.updateUser ">update_user =
                    #{item.updateUser},
                </if>
                <if test="null != item.updateUserId  and '' != item.updateUserId ">update_user_id =
                    #{item.updateUserId},
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>


</mapper>