<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.itdachen.auth.mapper.IAuthUserRoleMapper">

    <select id="findAuthUserRole" parameterType="java.lang.String"
            resultType="com.github.itdachen.framework.context.tree.ZTreeNode">
        SELECT id, role_name AS name
        FROM ta_fly_user_role_info
        WHERE user_id = #{userId} AND tenant_id = #{tenantId}
    </select>

</mapper>