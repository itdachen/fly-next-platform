<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.itdachen.ssh.mapper.ISshServerConfigMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.github.itdachen.ssh.sdk.vo.SshServerConfigVO" id="sshServerConfigMap">
        <result property="id" column="id"/>
        <result property="sshTitle" column="ssh_title"/>
        <result property="hostIp" column="host_ip"/>
        <result property="hostPort" column="host_port"/>
        <result property="hostUsername" column="host_username"/>
        <result property="hostPassword" column="host_password"/>
        <result property="validFlag" column="valid_flag"/>
        <result property="remarks" column="remarks"/>
    </resultMap>

    <!-- VO 类查询 -->
    <sql id="selectSshServerConfigVO">
        SELECT id,
               ssh_title,
               host_ip,
               host_port,
               host_username,
               host_password,
               valid_flag,
               remarks
        FROM ta_fly_ssh_server_config
    </sql>

    <!-- 分页和导出查询参数 -->
    <sql id="selectParamsWhere">
        <where>
            <if test="null != sshTitle  and '' != sshTitle ">
                AND ssh_title LIKE CONCAT(CONCAT('%',#{sshTitle}),'%')
            </if>
            <if test="null != hostIp  and '' != hostIp ">
                AND host_ip LIKE CONCAT(CONCAT('%',#{hostIp}),'%')
            </if>
            <if test="null != validFlag  and '' != validFlag ">
                AND valid_flag = #{validFlag}
            </if>
        </where>
        ORDER BY id DESC
    </sql>

    <!-- 集合查询 -->
    <select id="list" parameterType="com.github.itdachen.ssh.sdk.query.SshServerConfigQuery"
            resultMap="sshServerConfigMap">
        <include refid="selectSshServerConfigVO"/>
        <include refid="selectParamsWhere"></include>
    </select>

    <!-- 根据主键查询 -->
    <select id="selectSshServerConfigVO" parameterType="java.lang.String" resultMap="sshServerConfigMap">
        <include refid="selectSshServerConfigVO"/>
        WHERE id = #{id}
    </select>

    <!-- 批量添加 -->
    <insert id="batchSave" parameterType="java.util.List">
        INSERT INTO ta_fly_ssh_server_config (id ,
        ssh_title ,
        host_ip ,
        host_port ,
        host_username ,
        host_password ,
        valid_flag ,
        remarks ,
        create_time ,
        create_user ,
        create_user_id ,
        update_time ,
        update_user ,
        update_user_id
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id},
            #{item.sshTitle},
            #{item.hostIp},
            #{item.hostPort},
            #{item.hostUsername},
            #{item.hostPassword},
            #{item.validFlag},
            #{item.remarks},
            #{item.createTime},
            #{item.createUser},
            #{item.createUserId},
            #{item.updateTime},
            #{item.updateUser},
            #{item.updateUserId})
        </foreach>
    </insert>

    <!-- 批量更新 -->
    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=";">
            UPDATE ta_fly_ssh_server_config
            <set>
                <if test="null != item.id  and '' != item.id ">id =
                    #{item.id},
                </if>
                <if test="null != item.sshTitle  and '' != item.sshTitle ">ssh_title =
                    #{item.sshTitle},
                </if>
                <if test="null != item.hostIp  and '' != item.hostIp ">host_ip =
                    #{item.hostIp},
                </if>
                <if test="null != item.hostPort  and '' != item.hostPort ">host_port =
                    #{item.hostPort},
                </if>
                <if test="null != item.hostUsername  and '' != item.hostUsername ">host_username =
                    #{item.hostUsername},
                </if>
                <if test="null != item.hostPassword  and '' != item.hostPassword ">host_password =
                    #{item.hostPassword},
                </if>
                <if test="null != item.validFlag  and '' != item.validFlag ">valid_flag =
                    #{item.validFlag},
                </if>
                <if test="null != item.remarks  and '' != item.remarks ">remarks =
                    #{item.remarks},
                </if>
                <if test="null != item.createTime ">create_time =
                    #{item.createTime},
                </if>
                <if test="null != item.createUser  and '' != item.createUser ">create_user =
                    #{item.createUser},
                </if>
                <if test="null != item.createUserId  and '' != item.createUserId ">create_user_id =
                    #{item.createUserId},
                </if>
                <if test="null != item.updateTime ">update_time =
                    #{item.updateTime},
                </if>
                <if test="null != item.updateUser  and '' != item.updateUser ">update_user =
                    #{item.updateUser},
                </if>
                <if test="null != item.updateUserId  and '' != item.updateUserId ">update_user_id =
                    #{item.updateUserId},
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>


</mapper>